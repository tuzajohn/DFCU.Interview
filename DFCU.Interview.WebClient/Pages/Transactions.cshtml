@page  
@model DFCU.Interview.WebClient.Pages.TransactionsModel  
@{  
}  

<h2>Transactions</h2>  

@{
    if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info" role="alert">
            @Model.Message
        </div>
    }
}

<form method="post">  

   <div class="form-group">  
       <label asp-for="Payee"></label>
        <input asp-for="Payee" type="text" class="form-control" />
        <span asp-validation-for="Payee" class="text-danger"></span>
    </div>  

   <div class="form-group">  
       <label asp-for="Payer"></label>
        <input asp-for="Payer" type="text" class="form-control" />
        <span asp-validation-for="Payer" class="text-danger"></span>
    </div> 

   <div class="form-group">
        <label asp-for="PayerReference"></label>
        <textarea asp-for="PayerReference" type="text" class="form-control"></textarea>
        <span asp-validation-for="PayerReference" class="text-danger"></span>
    </div>  

   <div class="form-group">  
      <label asp-for="Currency"></label>  
      <select asp-for="Currency" class="form-control">  
          <option value="USD">USD - United States Dollar</option>  
          <option value="EUR">EUR - Euro</option>  
          <option value="GBP">GBP - British Pound</option>  
          <option value="UGX">UGX - Ugandan Shilling</option>  
      </select>  
      <span asp-validation-for="Currency" class="text-danger"></span>  
   </div>

   <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" min="0.00" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>  

   <button type="submit" class="btn btn-primary">Submit</button>  
</form>
